{
  "name": "mothers-book-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "postinstall": "npx convex codegen",
    "mobile": "yarn workspace @mothers-book/mobile start",
    "mobile:ios": "yarn workspace @mothers-book/mobile ios",
    "mobile:android": "yarn workspace @mothers-book/mobile android",
    "web": "yarn workspace @mothers-book/web dev",
    "web:build": "yarn workspace @mothers-book/web build",
    "convex:dev": "npx convex dev",
    "mobile:prebuild": "yarn workspace @mothers-book/mobile prebuild",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "convex": "1.30.0"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.3",
    "expo": "~54.0.31",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "resend": "^6.7.0"
  }
}
