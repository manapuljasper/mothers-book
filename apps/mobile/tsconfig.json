{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types"],
      "@/stores": ["src/stores"],
      "@/services": ["src/services"],
      "@/data": ["src/data"],
      "@/hooks": ["src/hooks"],
      "@/utils": ["src/utils"],
      "@/components/*": ["src/components/*"],
      "@convex/*": ["../../convex/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts", "../../convex/**/*.ts"]
}
